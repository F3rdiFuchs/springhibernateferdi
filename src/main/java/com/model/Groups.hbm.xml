<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
        
        <hibernate-mapping package="com.model">
	    	
	    	<class name="Groups" table="groups">
	        	
	        	<id name="groupId" type="int" column="groupId">
	            	<generator class="native"/>
	        	</id>
	        	
	        <property name="name" 		column="name" type="string" />
	        <property name="description" column="description" type="string" />
	        <property name="accessLevel" column="accessLevel" type="int"/>
	        
	     	<bag name="user" table="user" inverse="false" cascade="all">
	     		<key column="groupId"/>
	     		<one-to-many class="com.model.User"/>
	     	</bag>
   		 </class> 
</hibernate-mapping>